{
  "name": "@ansvar/automotive-cybersecurity-mcp",
  "version": "0.1.0",
  "description": "MCP server for automotive cybersecurity regulations, standards, and TARA methodology",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "automotive-cybersecurity-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:db": "tsx scripts/build-db.ts",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "npm run build:db && npm run build && npm test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "verify:package": "npm pack --dry-run && echo '✅ Package verification complete'",
    "verify:db": "test -f data/automotive.db && echo '✅ Database exists' || (echo '❌ Database missing' && exit 1)",
    "prepublishOnly": "npm run test:ci && npm run verify:db && echo '✅ Ready to publish'"
  },
  "keywords": [
    "mcp",
    "automotive",
    "cybersecurity",
    "unece",
    "r155",
    "r156",
    "iso21434",
    "tara"
  ],
  "author": "Jeffrey von Rotz <jeffrey@ansvar.ai>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ansvar-Systems/Automotive-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/Automotive-MCP/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/Automotive-MCP#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
